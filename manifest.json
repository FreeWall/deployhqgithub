{
  "name": "GitHub Enhancer",
  "version": "1.1",
  "description": "Deployments by DeployHQ and custom CSS styles in GitHub pull requests",
  "permissions": ["*://*.github.com/*", "activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["settings.js","background.js"],
    "persistent": true
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches":["https://github.com/ateli-development/shipgratis*"],
      "run_at": "document_start",
      "all_frames": true,
      "js":["jquery-3.4.1.min.js","test.js"]
    }
  ],
  "web_accessible_resources": ["deployhq.png","styles.css"],
  "manifest_version": 2
}
