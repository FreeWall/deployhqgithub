{
  "name": "GitHub Enhancer",
  "version": "1.3",
  "description": "Deployments by DeployHQ and custom CSS styles in GitHub pull requests",
  "permissions": ["*://*.github.com/*", "activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["settings/settings.js","background.js"],
    "persistent": true
  },
  "page_action": {
    "default_popup": "settings/settingsMenu.html"
  },
  "content_scripts": [
    {
      "matches":["https://github.com/ateli-development/shipgratis*"],
      "run_at": "document_start",
      "all_frames": true,
      "js":["static/jquery-3.4.1.min.js","content.js"]
    }
  ],
  "web_accessible_resources": ["static/deployhq.png","static/styles.css"],
  "manifest_version": 2
}
